<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Agregar Pel√≠cula</h1>
    <br>
    <section >
        <form action="/movies/create" method="POST" class="formulario">
            <label for="title">Title </label>
            <p><input type="text" name="title" id="" required></p>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" required> </p>
            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="" required></p>
            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="" required></p>
            <label for="length">Length </label>
            <p><input type="number" name="length" id="" required></p>
            <label for="genre_id">Genre </label>
            <p>
                <select name="genre_id" id="" required>
                    <option value="" disabled selected>- select genre - </option>
                    <% allGenres.forEach(genre => { %>
                    <option value="<%= genre.id %>"><%= genre.name %></option>
                    <% }); %>
                </select>
            </p>
            <label for="actors_id">Actors </label>
            <p>
                <select name="actors_id" id="" multiple required style="height: 150px;">
                    <option value="" disabled selected>- select Actor - </option>
                    <% allActors.forEach(Actor => { %>
                    <option value="<%= Actor.id %>"><%= Actor.first_name+' '+Actor.last_name %></option>
                    <% }); %>
                </select>
            </p>
            <br>
            <p class="botonera"> <button class="botonAgregar" type="submit">Agregar</button>
            
            </p>
        </form>
        <br>
        <a  class="botonera botonVolver centrado" href="/movies">Volver</a>
    </section>
    
</body>

</html>